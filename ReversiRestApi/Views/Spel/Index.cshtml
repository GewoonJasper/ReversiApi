@model IEnumerable<ReversieISpelImplementatie.Model.Spel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Omschrijving)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speler1Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Speler2Token)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BordInString)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AandeBeurt)
            </th>
